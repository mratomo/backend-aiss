# Example environment file - Copy to .env and set secure values
# Security & Authentication
AUTH_SECRET=change_this_to_a_strong_secret_key
ADMIN_INITIAL_PASSWORD=strong_admin_password_here
DB_ENCRYPTION_KEY=strong_encryption_key_here
HASH_SALT=strong_salt_for_hashing_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.domain.com

# MinIO Configuration
MINIO_ACCESS_KEY=change_this_to_secure_key
MINIO_SECRET_KEY=change_this_to_secure_secret
MINIO_USE_SSL=false

# LLM Provider Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_DEFAULT_MODEL=gpt-4o
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229
OLLAMA_DEFAULT_MODEL=llama3
OLLAMA_API_BASE=http://ollama:11434

# Embedding Models
GENERAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L12-v2
PERSONAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L12-v2
USE_GPU=true

# MCP Configuration
MCP_API_URL=http://rag-agent:8085/api/v1/mcp
MCP_API_KEY=
USE_MCP_TOOLS=true
PREFER_DIRECT_MCP=true
